<header>
  <nav class="navbar d-flex justify-content-around fixed-top navbar-dark navbar-expand-lg">
    <div class="container">
      <!-- logo -->
      <a href="/" class="navbar-brand me-5">nodeShop <i aria-hidden="true" class="fas fa-shopping-basket"></i></a>

      <!-- responsive nav -->
      <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#nav">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="nav">
        <!-- search bar -->
        <form action="/search" method="POST" class="form-inline my-3 my-md-0">
          <div class="input-group">
            <input type="text" name="productTitle" class="nav-input form-control" placeholder="Search for products" />
            <button class="input-group-text" type="submit" aria-label="Search"><i class="fas fa-search" aria-hidden="true"></i></button>
            <input type="hidden" name="_csrf" value="<%=csrfToken%>">
          </div>
        </form>
        <!-- links -->
        <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link <%= path === '/products' ? 'text-white' : '' %>" href="/products">Products <i class="fas fa-book"></i> </a>
            </li>
          <% if (isLoggedIn) { %>
            <li class="nav-item">
              <a href="/cart" class="nav-link <%= path === '/cart' ? 'text-white' : '' %>">Cart <i class="fas fa-shopping-cart" aria-hidden="true"></i></a>
            </li>
            <li class="nav-item">
              <a href="/orders" class="nav-link <%= path === '/orders' ? 'text-white' : '' %>">Orders <i class="far fa-credit-card" aria-hidden="true"></i></a>
            </li>
            <li class="nav-item dropdown">
              <a href="#" class="nav-link dropdown-toggle <%= path === '/admin' ? 'text-white' : '' %>" data-bs-toggle="dropdown">Admin <i class="fas fa-unlock" aria-hidden="true"></i></a>
              <div class="dropdown-menu">
                <a href="/admin/add-product" class="dropdown-item">Add product</a>
                <a href="/admin/products" class="dropdown-item">Products added by you</a>
              </div>
            </li>
            <li class="nav-item">
              <form action="/post-logout" method="POST">
                <button class="btn nav-link">Logout <i class="fas fa-sign-out-alt" aria-hidden="true"></i></button>
                <input type="hidden" name="_csrf" value="<%=csrfToken%>">
              </form>
            </li>
          <% } else {%>
            <li class="nav-item"> 
              <a href="/login" class="nav-link <%= path === '/login' ? 'text-white' : '' %>">Login <i class="fas fa-user" aria-hidden="true"></i></a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>
</header>
